<Window x:Class="WpfMediaPlayer.OpenURLDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="140" Width="300">

    <StackPanel Margin="10">

        <TextBlock Text="ファイルまたはURLを入力してください"/>
        <TextBox Name="URLBox" Margin="0"/>

        <StackPanel Margin="10" HorizontalAlignment="Center" Orientation="Horizontal">

            <Button Content="OK" Margin="5" Width="50" Click="OK_Button_Click"/>
            <Button Content="Cancel" Margin="5" Width="50" Click="Cancel_Button_Click"/>

        </StackPanel>

    </StackPanel>
</Window>
